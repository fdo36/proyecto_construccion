<p id="notice"><%= notice %></p>
<div class="headContent">
  <h1>Ver Compañia</h1>
</div>
<div class="box">
<%= link_to 'Volver', companies_path , :class => "button blue alignright" %>
<p>
  <b>Nombre:</b>
  <%= @company.name %>
</p>

<p>
  <b>Rut:</b>
  <%= @company.rut %>
</p>

<p>
  <b>Dirección:</b>
  <%= @company.address %>
</p>

<p>
  <b>Ciudad:</b>
  <%= @company.city %>
</p>

<p>
  <b>Giro del Negocio:</b>
  <%= @company.line_of_business %>
</p>

<p>
  <b>Teléfono:</b>
  <%= @company.phone %>
</p>

<p>
  <b>Correo electrónico:</b>
  <%= @company.email %>
</p>


</div>
