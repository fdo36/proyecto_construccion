<%= form_tag  do %>
<input type="hidden" value="1" name="report_type"></input>
   <div class="line-forme">
      <div class="forme-lab">
         <%= label_tag 'Productor'%> 
      </div>
      <% @producers_array = Producer.all.map { |producer| [producer.name, producer.id] } %>
