<h1>Listing providers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Rut</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Address</th>
    <th>Commune</th>
    <th>Contacto</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @providers.each do |provider| %>
  <tr>
    <td><%= provider.name %></td>
    <td><%= provider.rut %></td>
    <td><%= provider.phone %></td>
    <td><%= provider.email %></td>
    <td><%= provider.address %></td>
    <td><%= provider.commune %></td>
    <td><%= provider.contacto %></td>
    <td><%= provider.active %></td>
    <td><%= link_to 'Show', provider %></td>
    <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
    <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

