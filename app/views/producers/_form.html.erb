<script>
$(document).ready(function(){
  load_regions("regions", "producer_commune_id");
});
</script>

<div class="box">
<%= form_for (@producer) do |f| %>
  <% if @producer.errors.any? %>
    <div id="error_explanation">
      <h2><%= @producer.errors.count > 1 ? "#{@producer.errors.count} errores." : "#{@producer.errors.count} error." %> no se puede guardar el productor:</h2>

      <ul>
      <% @producer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Rut                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">
      <%= f.text_field :rut, :class => 'rut' %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Nombre Compañia                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Giro                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">
      <%= f.text_field :line_of_business %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Región                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">
      <% @regions = Region.all.map { |region| [region.name, region.id] } %>
      <%= select_tag('regions', options_for_select(@regions),
          :onchange => "show_communes(this, 'producer_commune_id')", :selected => :prompt, :prompt => '- Seleccione región -') %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Comuna                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">

      <%= f.select(:commune_id, "commune" ,:selected => :prompt, :prompt => '- Seleccione comuna -') %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Dirección                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        E-Mail                
      </label>  
    </div>
    <div class="forme-in">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Teléfono                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">
      <%= f.text_field :phone %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Contacto                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">
      <%= f.text_field :contact %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Código SAG                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">
      <%= f.text_field :sag_code %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Agrupaciones                
        <em class="formee-req">*</em>
      </label>  
    </div>
  </div>
    
    <% @groupings.each do |grouping| %>
      <div class="line-forme" style="margin-left:50px">
        <div class="forme-lab">
          <%= check_box_tag "grouping_ids[]", grouping.id, @producer.groupings.member?(grouping) -%>
          <%= h grouping.name -%>
        </div>
        <div class="forme-in">
          <%= text_field "grouping_code" ,"grouping_#{grouping.id}" %>
        </div>
      </div>  
    <% end %>
  <label> (
    <em class="formee-req">*</em>
  </label> ) Campos obligatorios.
</div>

<div class="foot-box">
  <%= link_to 'Cancelar', producers_path , :class => "button silver alignright" %>
  <%= f.submit :Guardar , :class => "button green alignright" %>
</div>
<% end %>