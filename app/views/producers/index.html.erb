<div class="headContent">
  <h1>Lista de Productores</h1>
</div>
<div class="box">
  <%= link_to 'Nuevo Productor', new_producer_path , :class => "button blue alignright" %>

  <table cellpadding="0" cellspacing="0" border="0" class="display datatable">
    <thead>
      <tr>
        <th style="width:20% !important;">Nombre</th>
        <th>Dirección</th>
        <th>Comuna</th>
        <th>Teléfono</th>
        <th>Email</th>
        <th style="width:20% !important;">Acciones</th>
      </tr>
    </thead>
  <tbody>
<% @producers.each do |producer| %>
  <tr>
    <td><%= producer.company_name %></td>
    <td><%= producer.address %></td>
    <td><%= producer.commune_id %></td>
    <td><%= producer.phone %></td>
    <td><%= producer.email %></td>
    <td><%= link_to 'Ver', producer %>
    <%= link_to 'Editar', edit_producer_path(producer) %>
    <%= link_to 'Eliminar', producer, method: :delete, data: { confirm: '¿Está seguro de eliminar este Productor?' } %></td>
  </tr>
<% end %>
    </tbody>
  </table>

</div>