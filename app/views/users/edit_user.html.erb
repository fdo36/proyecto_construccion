<div class="headContent">
  <h1>Editar Perfil</h1>
</div>
<div class="box">
  <%= form_for([@company, @user]) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>Se han encontrado los siguientes errores:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

     <div class="line-forme">
      <div class="forme-lab">
        <label> 
        Nombre             
        <em class="formee-req">*</em>
      </label> 
      </div>    
      <div class="forme-in">
        <%= f.text_field :name %>
      </div>  
    </div>

    <div class="line-forme">
      <div class="forme-lab">
        <label> 
        Apellido             
        <em class="formee-req">*</em>
      </label> 
      </div>  
      <div class="forme-in">
        <%= f.text_field :lastname %>    
      </div>

    </div>
      

    <div class="line-forme">
      <div class="forme-lab">
        <label> 
        Teléfono            
        <em class="formee-req">*</em>
        </label> 
      </div>  
      <div class="forme-in">
        <%= f.number_field :phone %>
      </div>
    </div>

    <div class="line-forme">
      <div class="forme-lab">
        <label> 
        Correo Electrónico                
        <em class="formee-req">*</em>
      </label> 
      </div>
      <div class="forme-in">
         <%= f.text_field :email %>
      </div>
    </div>   

    <div class="line-forme">
      <div class="forme-lab">
        <%= f.label :Genero %><br />
      </div>
      <div class="forme-in">
        <%= f.radio_button(:gender, "Masculino") %>
        <%= label_tag(:label1, "Masculino") %>
        <%= f.radio_button(:gender,"Femenino") %>
        <%= label_tag(:label1, "Femenino") %>
      </div>
    </div>      

    <div class="line-forme">
      <div class="forme-lab">
        <%= f.label :Pregunta_secreta %><br />
      </div>
      <div class="forme-in">  
        <%= f.text_field :secret_question %>
      </div>
    </div>

    <div class="line-forme">
      <div class="forme-lab">
        <%= f.label :Respuesta_Secreta %><br />
      </div>  
      <div class="forme-in">
      <%= f.text_field :secret_answer %>
      </div>  
    </div>

    <div class="line-forme">
      <div class="forme-lab">
        <%= link_to 'Cambiar contraseña',  edit_user_password_path %><br />
      </div>  
       
    </div>

    <input type="hidden" name="password_only" value="1"></input>

    <label> (
      <em class="formee-req">*</em>
    </label> ) Campos obligatorios.
</div>

<div class="foot-box">
  <%= link_to 'Cancelar', show_user_profile_path(@company, @user) , :class => "button silver alignright" %>
  <%= f.submit :Guardar , :class => "button green alignright" %>
</div>
 <% end %>
