<div class="headContent">
  <h1>Lista de Usuarios</h1>
</div>
<div class="box">
    <%= link_to 'Nuevo Usuario', new_user_path , :class => "button blue alignright" %>

    <table cellpadding="0" cellspacing="0" border="0" class="display datatable">
        <thead>
            <tr>
                <th style="width:20% !important;">Email</th>
                
                <th>Activo</th>
                <th>Teléfono</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Genero</th>
                <th style="width:20% !important;">Acciones</th>
                
              
            </tr>
        </thead> 
    <tbody>     

    <% @users.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            
            <td><%= user.active %></td>
            <td><%= user.phone %></td>
            <td><%= user.name %></td>
            <td><%= user.lastname %></td>
            <td><%= user.gender %></td>
            
            <td><%= link_to 'Ver', user %>
            <%= link_to 'Editar', edit_user_path(user) %>
            <%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Esta seguro de eliminar este Usuario?' } %></td>
        </tr>
    <% end %>
        </tbody>
    </table>
</div>



