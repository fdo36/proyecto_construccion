<div class="box">
  <%= form_for([@company, @user]) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>Se han encontrado los siguientes errores:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

     <div class="line-forme">
      <div class="forme-lab">
        <label> 
        Nombre             
        <em class="formee-req">*</em>
      </label> 
      </div>    
      <div class="forme-in">
        <%= f.text_field :name %>
      </div>  
    </div>

    <div class="line-forme">
      <div class="forme-lab">
        <label> 
        Apellido             
        <em class="formee-req">*</em>
      </label> 
      </div>  
      <div class="forme-in">
        <%= f.text_field :lastname %>    
      </div>

    </div>
        <div class="line-forme">
      <div class="forme-lab">
        <%= f.label :Activo %><br />
      </div>  
      <div class="forme-in">
        <%= f.check_box :active %>
      </div>
    </div>  

    <div class="line-forme">
      <div class="forme-lab">
        <label> 
        Teléfono                
        <em class="formee-req">*</em>
        </label> 
      </div>  
      <div class="forme-in">
        <%= f.number_field :phone %>
      </div>
    </div>

    <div class="line-forme">
      <div class="forme-lab">
        <label> 
        Correo Electrónico                
        <em class="formee-req">*</em>
      </label> 
      </div>
      <div class="forme-in">
         <%= f.text_field :email %>
      </div>
    </div>   

    <div class="line-forme">
      <div class="forme-lab">
        <%= f.label :Genero %><br />
      </div>
      <div class="forme-in">
        <%= f.radio_button(:gender, "Masculino") %>
        <%= label_tag(:label1, "Masculino") %>
        <%= f.radio_button(:gender,"Femenino") %>
        <%= label_tag(:label1, "Femenino") %>
      </div>
    </div>      

    <div class="line-forme">
      <div class="forme-lab">
        <%= f.label :Pregunta_secreta %><br />
      </div>
      <div class="forme-in">  
        <%= f.text_field :secret_question %>
      </div>
    </div>

    <div class="line-forme">
      <div class="forme-lab">
        <%= f.label :Respuesta_Secreta %><br />
      </div>  
      <div class="forme-in">
      <%= f.text_field :secret_answer %>
      </div>  
    </div>

    <% if current_user.super_admin == true %>
    <div class="line-forme">
      <div class="forme-lab">
        <%= f.label :Súper_Usuario%><br />
      </div>  
      <div class="forme-in">
      <%= f.check_box :super_admin %>
      </div>  
    </div>

    <% end %>

    <div class="line-forme">
      <div class="forme-lab">
        <%= f.label :Roles %><br />
      </div>
      <div class="forme-in">
      <% @roles.each do |role| %>
        <%= check_box_tag 'role_ids[]', role.id, @user.roles.member?(role) -%>
        <%= h role.name -%>
      <% end %>
      </div>
    </div>
    <label> (
      <em class="formee-req">*</em>
    </label> ) Campos obligatorios.
</div>

<div class="foot-box">
  <%= link_to 'Cancelar', company_users_path(@company) , :class => "button silver alignright" %>
  <%= f.submit :Guardar , :class => "button green alignright" %>
</div>
 <% end %>
