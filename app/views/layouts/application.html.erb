<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Centros de Acopio</title>

  	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>

	<link rel="stylesheet" href="/css/jquery-ui.css" />
	<link rel="stylesheet" type="text/css" href="/plugins/datatables/media/css/data_table.css" />
	<link  rel="stylesheet" href="/css/styles.css" type="text/css"></style>
	<link  rel="stylesheet" href="/css/default_buttons.css" type="text/css"></style>

	<script src="/js/jquery-ui.js"></script>
	<script type="text/javascript" src="/plugins/datatables/media/js/jquery.dataTables.js"></script>
	<script type="text/javascript" src="/plugins/datatables/media/js/jquery.dataTablesES.js"></script>

	<script>
		$(function() {
			$( ".date" ).datepicker();

		    $('.datatable').dataTable({
				"sPaginationType": "full_numbers",
				"bJQueryUI": true,
				"aoColumnDefs": [
		      { "bSortable": false, "aTargets": [ -1 ] }
		    ] } );

		});
		$(document).on("click", "#mostrar-dialog",function(event) 
		{	
			$( "#dialog-modal" ).dialog( "open" );
		});
  	</script>
</head>
<body>

	<div id="container">

		<section id="content">
			

			<div class="contentPanel">
				<%= yield %>
			</div>

			<section id="left">
				<div id="leftCol">
		
					<ul id="action" >
						<h2 class="headLeft"> Entradas/Salidas </h2>
						<li> <p><%= link_to "Ingresos", "/" %></p></li>
						<li> <p><%= link_to "Temporadas", "/" %></p></li>
						<li> <p><%= link_to "Despachos", "/" %></p></li>
						<li> <p><%= link_to "Informes", "/" %></p></li>
					</ul>
					
					<ul id="maintainer" >
						<h2 class="headLeft"> Recursos </h2>
						<li> <p><%= link_to "Productores", "/producers" %></p></li>
						<li> <p><%= link_to "Envases", "/containers" %></p></li>
						<li> <p><%= link_to "Destinos", "/destinations" %></p></li>
						<li> <p><%= link_to "Especies", "/kinds" %></p></li>
						<li> <p><%= link_to "Variedades", "/varieties" %></p></li>
						<li> <p><%= link_to "Calidades", "/qualities" %></p></li>
						<li> <p><%= link_to "Agrupaciones", "/groupings" %></p></li>
					</ul>
					
				</div>
			</section>
		</section>

		<section id="top">
			<div id="pageHead">
				<div id="logo">
					<img src="/images/des.png" width="40" height="40">
					<h1 id="textLogo">Sistema Centros de Acopio</h1>
				</div>
				<div class="tools">
					<div class="toolsCompressed">
						<p> Usuario</p>
					</div>
					
					<ul class="toolsMenu">

						<li><p><%= link_to('Cuentas', users_path) %></p></li>
						<li><p>Permisos</p></li>
						<li><p><%= link_to('Cerrar sesión', destroy_user_session_path, :method => :delete) %></p> </li>
					</ul>
				</div>

				<div class="tools first-tool">
					<div class="toolsCompressed">
						<p> Herramientas</p>
					</div>
					
					<ul class="toolsMenu">
						<li> <p>Configuración</p> </li>
						<li> <p>Ayuda</p> </li>
						<li> <p>Acerca de</p></li>
					</ul>
				</div>
			</div>
		</section>

	</div>

</body>
</html>

