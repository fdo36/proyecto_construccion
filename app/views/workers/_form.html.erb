      <div id="error_explanation">
        <h2>Se han encontrado los siguientes errores:</h2>

        <ul>
        <% @worker.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="line-forme">
      <div class="forme-lab">
        <label> 
          Rut                
          <em class="formee-req">*</em>
        </label>  
      </div>
      <div class="forme-in">
        <%= f.text_field :rut, :class => 'rut' %>
      </div>
    </div>


    <div class="line-forme">
      <div class="forme-lab">
        <label> 
          Nombre
          <em class="formee-req">*</em>
        </label>  
      </div>
      <div class="forme-in">
        <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="line-forme">
      <div class="forme-lab">
        <label> 
          Apellido
          <em class="formee-req">*</em>
        </label>  
      </div>
      <div class="forme-in">
        <%= f.text_field :last_name %>
      </div>
    </div>

    <div class="line-forme">
      <div class="forme-lab">
        <label> 
          Tel√©fono
        </label>  
      </div>
