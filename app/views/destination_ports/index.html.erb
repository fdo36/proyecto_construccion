<div class="headContent">
  <h1>Lista de Puertos de Destino</h1>
</div>
<div class="box">

  <div class="newTopBanner">
    <%= link_to 'Nuevo Puerto de Destino', new_destination_port_path , :class => "button blue alignright" %>
  </div>

  <p id="notice" class="alignleft"><%= notice %> </p>

  <table cellpadding="0" cellspacing="0" border="0" class="display datatable">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3" style="width:20% !important;">Acciones</th>
        </tr>
    </thead>
    <tbody>
      <% @destination_ports.each do |destination_port| %>
        <tr>
          <td><%= destination_port.name %></td>
          <td><%= link_to 'Ver', destination_port %>
          <%= link_to 'Editar', edit_destination_port_path(destination_port) %>
          <%= link_to 'Eliminar', destination_port, method: :delete, data: { confirm: '¿Está seguro de eliminar este puerto?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>