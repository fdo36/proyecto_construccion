<div class="headContent">
  <h1>Lista de Envases</h1>
</div>
<div class="box">
  <div class="newTopBanner">
    <%= link_to 'Nuevo Envase', new_pack_type_path , :class => "button blue alignright" %>
  </div>

  <table cellpadding="0" cellspacing="0" border="0" class="display datatable">
    <thead>
      <tr>
        <th style="width:20% !important;">Nombre</th>
        <th>Tara</th>
        <th style="width:20% !important;">Acciones</th>
      </tr>
    </thead>
  <tbody>
  <% @pack_types.each do |pack_type| %>
  <tr>
    <td><%= pack_type.name %></td>
    <td><%= pack_type.tare %></td>
    <td><%= link_to 'Ver', pack_type %></td>
    <td><%= link_to 'Editar', edit_pack_type_path(pack_type) %></td>
    <td><%= link_to 'Eliminar', pack_type, method: :delete, data: { confirm: 'Â¿EstÃ¡ seguro de eliminar este Envase?' } %></td>
  </tr>
<% end %>
    </tbody>
  </table>

</div>
