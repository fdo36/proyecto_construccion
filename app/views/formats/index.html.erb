<div class="headContent">
<h1>Formatos</h1>
</div>
<div class="box">
  <div class="newTopBanner">
    <%= link_to 'Nuevo Formato', new_format_path , :class => "button blue alignright" %>
  </div>

<table cellpadding="0" cellspacing="0" border="0" class="display datatable">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad</th>
      <th>Peso</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @formats.each do |format| %>
    <tr>
      <td><%= format.name %></td>
      <td><%= format.quantity %></td>
      <td><%= format.weight %></td>
      <td><%= link_to 'Ver', format %>
      <%= link_to 'Editar', edit_format_path(format) %>
      <%= link_to 'Eliminar', format, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar este formato' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>