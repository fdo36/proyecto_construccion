<div class="box">
<%= form_for(@kind) do |f| %>
  <% if @kind.errors.any? %>
    <div id="error_explanation">
      <h2><%= @kind.errors.count > 1 ? "#{@kind.errors.count} errores." : "#{@kind.errors.count} error." %> no se puede guardar la especie:</h2>

      <ul>
      <% @kind.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="line-forme">
    <div class="forme-lab">
      <label> 
        Nombre                
        <em class="formee-req">*</em>
      </label>  
    </div>
    <div class="forme-in">
      <%= f.text_field :name %>
    </div>
  </div>
  <label> (
    <em class="formee-req">*</em>
  </label> ) Campos obligatorios.
</div>
<div class="foot-box">
  <%= link_to 'Cancelar', kinds_path , :class => "button silver alignright" %>
  <%= f.submit :Guardar , :class => "button green alignright" %>
</div>
<% end %>