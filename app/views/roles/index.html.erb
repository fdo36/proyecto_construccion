<div class="headContent">
  <h1>Lista de Roles</h1>
</div>
<div class="box">
  <%= link_to 'Nuevo Rol', new_role_path , :class => "button blue alignright" %>

  <table cellpadding="0" cellspacing="0" border="0" class="display datatable">
    <thead>
      <tr>
        <th style="width:20% !important;">Nombre</th>
        <th>Descripción</th>
        
        
      </tr>
    </thead>
  <tbody>

  <% @roles.each do |role| %>
    
      <tr>
        <td><%= role.name %></td>
        <td><%= role.description %></td>
        <td><%= link_to 'Ver', role %></td>
        <td><%= link_to 'Editar', edit_role_path(role) %></td>
        <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: '¿Está seguro de eliminar este Rol?' } %></td>
      </tr>
    
  <% end %>
    </tbody>
  </table>

</div>