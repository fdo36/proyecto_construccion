<div class="headContent">
  <h1>Lista de Roles</h1>
</div>
<div class="box">
  <div class="newTopBanner">
    <%= link_to 'Nuevo Rol', new_company_role_path(@company), :class => "button blue alignright" %>
  </div>

  <table cellpadding="0" cellspacing="0" border="0" class="display datatable">
    <thead>
      <tr>
        <th style="width:20% !important;">Nombre</th>
        <th>Descripción</th>
        <th style="width:20% !important;">Acciones</th>
        
        
      </tr>
    </thead>
  <tbody>

  <% @roles.each do |role| %>
    
      <tr>
        <td><%= role.name %>
        <td><%= role.description %></td>
        <td><%= link_to 'Ver', company_role_path(@company, role) %>
        <%= link_to 'Editar', edit_company_role_path(@company, role) %>
        <%= link_to 'Eliminar', company_role_path(@company, role), method: :delete, data: { confirm: '¿Está seguro de eliminar este Rol?' } %></td>
      </tr>
    
  <% end %>
    </tbody>
  </table>

</div>