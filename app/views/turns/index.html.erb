<h1>Listing turns</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Subprocess</th>
    <th>Start datetime</th>
    <th>End datetime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @turns.each do |turn| %>
  <tr>
    <td><%= turn.name %></td>
    <td><%= turn.subprocess_id %></td>
    <td><%= turn.start_datetime %></td>
    <td><%= turn.end_datetime %></td>
    <td><%= link_to 'Show', turn %></td>
    <td><%= link_to 'Edit', edit_turn_path(turn) %></td>
    <td><%= link_to 'Destroy', turn, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

