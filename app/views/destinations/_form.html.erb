<div class="box">
<%= form_for(@destination) do |f| %>
  <% if @destination.errors.any? %>
    <div id="error_explanation">
      <h2><%= @destination.errors.count > 1 ? "#{@destination.errors.count} errores." : "#{@destination.errors.count} error." %> no se puede guardar el destino:</h2>

      <ul>
      <% @destination.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="line-forme">
    <div class="forme-lab">
      <%= f.label :Rut %><br />
    </div>
    <div class="forme-in">
      <%= f.text_field :rut %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <%= f.label :Nombre %><br />
    </div>
    <div class="forme-in">
      <%= f.text_field :company_name %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <%= f.label :Región %><br />
    </div>
    <div class="forme-in">
      <% @regions = Region.all.map { |region| [region.name, region.id] } %>
      <%= select_tag('regions', options_for_select(@regions),
        :onchange => "show_destination_communes(this)", :selected => :prompt, :prompt => '- Seleccione región -') %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <%= f.label :Comuna %><br />
    </div>
    <div class="forme-in">

      <%= f.select(:commune_id, {} ,:selected => :prompt, :prompt => '- Seleccione comuna -') %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <%= f.label :Dirección %><br />
    </div>
    <div class="forme-in">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <%= f.label :Email %><br />
    </div>
    <div class="forme-in">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <%= f.label :Contacto %><br />
    </div>
    <div class="forme-in">
      <%= f.text_field :contact %>
    </div>
  </div>
  <div class="line-forme">
    <div class="forme-lab">
      <%= f.label :Teléfono %><br />
    </div>
    <div class="forme-in">
      <%= f.text_field :phone %>
    </div>
  </div>
</div>
<div class="foot-box">
  <%= link_to 'Cancelar', destinations_path , :class => "button silver alignright" %>
  <%= f.submit :Guardar , :class => "button green alignright" %>
</div>
<% end %>



















  