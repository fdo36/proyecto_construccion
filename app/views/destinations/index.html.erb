<h1>Listing destinations</h1>

<table>
  <tr>
    <th>Rut</th>
    <th>Company name</th>
    <th>Commune</th>
    <th>Address</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Contact</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @destinations.each do |destination| %>
  <tr>
    <td><%= destination.rut %></td>
    <td><%= destination.company_name %></td>
    <td><%= destination.commune_id %></td>
    <td><%= destination.address %></td>
    <td><%= destination.email %></td>
    <td><%= destination.phone %></td>
    <td><%= destination.contact %></td>
    <td><%= destination.active %></td>
    <td><%= link_to 'Show', destination %></td>
    <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
    <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

