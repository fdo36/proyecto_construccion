<div class="headContent">
  <h1>Lista de Formatos</h1>
</div>
<div class="box">
  <div class="newTopBanner">
    <%= link_to 'Nuevo Formato', new_format_packing_path , :class => "button blue alignright" %>
  </div>

  <p id="notice" class="alignleft"><%= notice %> </p>

  <table cellpadding="0" cellspacing="0" border="0" class="display datatable">
    <thead>
      <tr>
        <th style="width:20% !important;">Nombre</th>
        <th>Cantidad</th>
        <th>Peso</th>
        <th colspan="3" style="width:20% !important;">Acciones</th>
      </tr>
    </thead>
  <tbody>
  <% @format_packings.each do |format_packing| %>
    <tr>
      <td><%= format_packing.name %></td>
      <td><%= format_packing.quantity %></td>
      <td><%= format_packing.weight %></td>
      <td><%= link_to 'Ver', format_packing %></td>
      <td><%= link_to 'Editar', edit_format_packing_path(format_packing) %></td>
      <td><%= link_to 'Eliminar', format_packing, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar este formato?' } %></td>
    </tr>
<% end %>
</table>

</div>