<script type="text/javascript">

function add_pallets(){
  var p_temperature = $("#stabilization_chamber_io_temperature").val();
  var p_order_number = $("#stabilization_chamber_io_order_number").val();
  var p_worker_id = $("#stabilization_chamber_io_worker_id").val();
  var p_direction = $('input[name="stabilization_chamber_io[direction]"]:checked').val();
  
  $('#chamber_table tbody tr').each(function(index){
     var code = $(this).find("td").eq(0).text();
     $.get("/packing_pallets.json", function(pallets) {
       $.each(pallets, function(index, pallet){
        if (pallet.pallet_code == code) {
          p_packing_pallet_id = pallet.id;
          $.ajax({
              url: "/stabilization_chamber_ios/",
              type: "POST",
                data: {stabilization_chamber_io:{ temperature: p_temperature,
                                            order_number: p_order_number,
                                            direction: p_direction,
                                            worker_id: p_worker_id,
                                            packing_pallet_id: p_packing_pallet_id}
                      }                      
            }).done(function(){
              window.location = "/stabilization_chamber_ios"
            });
        }
       });
     });
  });

  

}

function delete_row(button)
{
  var currentRow = $(button).closest('tr');
  $("#chamber_table").dataTable().fnDeleteRow(currentRow[0]);
}

$(document).ready(function(){

  $('#code_pallet').keydown(function (e){
      if(e.keyCode == 13){
          add_pallet();
      }
  });
  
 $('#code_pallet').focus(function(){
  alert($('#direction').checked().val());
  $('#code_pallet').blur();
 });

function add_pallet (){
    $("#error_label").text("");
    $.get("/packing_pallets.json", function(pallets) {
      flag = false;
      $.each(pallets, function(index, pallet){
        if (pallet.pallet_code == $("#code_pallet").val()) {
          flag = true;
          $('#chamber_table').dataTable().fnAddData([
             pallet.pallet_code,
             pallet.pack_type,
             pallet.gross_weight,
             "<a onclick='delete_row(this);'>Eliminar</a>"
          ]);   
        }
      });
      if (!flag){
        $("#error_label").text("Ingrese un código de pallet válido");
      }
       
      $("#code_pallet").val("");
    });
  }
  });

</script>

