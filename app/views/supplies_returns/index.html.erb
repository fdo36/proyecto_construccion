<div class="headContent">
    <h1>Lista de las Devoluciones de Insumos</h1>
</div>
<div class="box">
    <div class="newTopBanner">
        <%= link_to 'Nueva devolucion de insumos', new_supplies_return_path, :class => "button blue alignright" %>
    </div>
    <p id="notice" class="alignleft"><%= notice %> </p>
    <table cellpadding="0" cellspacing="0" border="0" class="display datatable">
      <thead>
          <tr>
            <th>Trabajador</th>
            <th>Insumo</th>
            <th>Cantidad</th>
            <th>Acciones</th>
          </tr>
      </thead>
      <tbody>
        <% @supplies_returns.each do |supplies_return| %>
            <tr>
              <td><%= (Worker.all(:select => "first_name", :conditions => ["id = ?", supplies_return.worker_id]))[0].first_name %>
              <%= (Worker.all(:select => "last_name", :conditions => ["id = ?", supplies_return.worker_id]))[0].last_name %></td>
              <td><%= (Supply.all(:select => "name", :conditions => ["id = ?",supplies_return.supply_id]))[0].name %></td>
              <td><%= supplies_return.quantity %></td>
              <td><%= link_to 'Ver', supplies_return %>
              <%= link_to 'Editar', edit_supplies_return_path(supplies_return)  %>
              <%= link_to 'Eliminar', supplies_return, method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta devolucion?' } %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
</div>
