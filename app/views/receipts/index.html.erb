<h1>Listing receipts</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Receipt datetime</th>
    <th>Producer</th>
    <th>Kind</th>
    <th>User</th>
    <th>Company</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @receipts.each do |receipt| %>
  <tr>
    <td><%= receipt.code %></td>
    <td><%= receipt.receipt_datetime %></td>
    <td><%= receipt.producer_id %></td>
    <td><%= receipt.kind_id %></td>
    <td><%= receipt.user_id %></td>
    <td><%= receipt.company_id %></td>
    <td><%= link_to 'Show', receipt %></td>
    <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
    <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

