      var month = $("#receipt_receipt_datetime_2i").val();
      var day = $("#receipt_receipt_datetime_3i").val();
     	var hour = $("#receipt_receipt_datetime_4i").val();
     	var minute = $("#receipt_receipt_datetime_5i").val();
