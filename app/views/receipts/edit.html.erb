    for (var key in registers){
      var register = registers[key] ;
      var register_id = register.register_id;
      var code = register.code;
      var gross_weight = register.gross_weight;
      var pack_type_id = register.pack_type_id;
      var price_per_unit = register.price_kg;
      var quality_id = register.quality_id;
      var quantity = register.quantity;
      var tare = register.tare;
      var variety_id = register.variety_id;

      if(register.is_pallet){
      	if(register.status == 3)
      	{
	        $.ajax({  
	          url: "/pallets",  
	          type: "POST", 
	          dataType: "json",
	          async: false,
	          data: { pallet : {code: code, gross_weight: gross_weight, pack_type_id: pack_type_id, price_per_unit: price_per_unit, quality_id: quality_id, quantity: quantity, receipt_id: receipt_id, tare: tare, variety_id: variety_id} } }); 
    	}
    	if(register.status == 2)
      	{
      		$.ajax({  
	          url: "/pallets/"+register_id,  
	          type: "POST", 
	          datatype: "json",
	          data: {"_method":"delete"} }); 
      	}
      	if(register.status == 1)
      	{
      		$.ajax({
      			type: "POST",
				url: '/pallets/'+register_id+'.json',
				data: { _method:'PUT', pallet : {code: code, gross_weight: gross_weight, pack_type_id: pack_type_id, price_per_unit: price_per_unit, quality_id: quality_id, quantity: quantity, receipt_id: receipt_id, tare: tare, variety_id: variety_id} },
				dataType: 'json'
			});
      	}
      }
      else
      {
      	if(register.status == 3)
      	{
	        $.ajax({  
	          url: "/pack_group_receipts",  
	          type: "POST", 
	          dataType: "json",
	          async: false,
	          data: { pack_group_receipt : {gross_weight: gross_weight, pack_type_id: pack_type_id, price_per_unit: price_per_unit, quality_id: quality_id, quantity: quantity, receipt_id: receipt_id, variety_id: variety_id} } }); 
    	}
    	if(register.status == 2)
      	{
      		$.ajax({  
	          url: "/pack_group_receipts/"+register_id,  
	          type: "POST", 
	          datatype: "json",
	          data: {"_method":"delete"} }); 
      	}
      	if(register.status == 1)
      	{
      		$.ajax({
      			type: "POST",
				url: '/pack_group_receipts/'+register_id+'.json',
				data: { _method:'PUT', pack_group_receipt : {gross_weight: gross_weight, pack_type_id: pack_type_id, price_per_unit: price_per_unit, quality_id: quality_id, quantity: quantity, receipt_id: receipt_id, variety_id: variety_id} },
				dataType: 'json'
			});
      	}
      }
    };
    set_modified(false);
    location.href = "/receipts";
  }

  function get_pack_type_tare (pack_type_id) {
    $.ajax({
      url: "/pack_types.json",
      dataType: 'json',
      async: false,
      success: function(data){
          $.each(data,function(index, value){
            if(value.id == pack_type_id)
            {
              tare = value.tare;
            }
          });
      }
    });
    return tare;
  }

  function get_variety_name (variety_id) {
    $.ajax({
      url: "/varieties.json",
      dataType: 'json',
      async: false,
      success: function(data){
          $.each(data,function(index, value){
            if(value.id == variety_id)
            {
              name = value.name;
            }
          });
      }
    });
    return name;
  }

  function get_quality_name (quality_id) {
    $.ajax({
      url: "/qualities.json",
      dataType: 'json',
      async: false,
      success: function(data){
          $.each(data,function(index, value){
            if(value.id == quality_id)
            {
              name = value.name;
            }
          });
      }
    });
    return name;
  }

  function clean_form () {
    $("#select_variety").val("");
    $("#pallet_quality_id").val("");
    $("#pallet_price_per_unit").val("");
    $("#pallet_pack_type_id").val("");
    $("#pallet_quantity").val("");
