    var new_register = new register(variety_id, quality_id, price_kg, pack_type_id, quantity, gross_weight, code, tare, is_pallet, id, 3,"");//3 es crear en bd

    registers[id_count] = new_register;

    var row = new Array(code, quantity, net_weight, variety_name, quality_name, price_kg, "<a class='del' name="+id_count+">Eliminar</a> <a class='edit' name="+id_count+">Editar</a>");
    $('#tablealone').dataTable().fnAddData(row);
    set_modified(true);
    clean_form();
  }

  function load_registers () {
  	var pathArray = window.location.pathname.split( '/' );
  	var receipt_id = pathArray[2];
    $.ajax({
      url: "/pack_group_receipts.json",
      dataType: 'json',
      async: false,
      success: function(data){
          $.each(data,function(index, value){
            if(value.receipt_id == receipt_id)
            {
            	var id = id_count;
            	id_count++;
            	var new_register = new register(value.variety_id, value.quality_id, value.price_per_unit, value.pack_type_id, value.quantity, value.gross_weight, "", "", false, id, 0, value.id);
            	registers[id_count] = new_register;

            	var pack_type_tare = get_pack_type_tare(value.pack_type_id);
            	var net_weight = value.gross_weight - (pack_type_tare * value.quantity);

            	var variety_name = get_variety_name(value.variety_id);
            	var quality_name = get_quality_name(value.quality_id);

            	var row = new Array("no aplica", value.quantity, net_weight, variety_name, quality_name, value.price_per_unit, "<a class='del' name="+id_count+">Eliminar</a> <a class='edit' name="+id_count+">Editar</a>");
            	$('#tablealone').dataTable().fnAddData(row);
            }
          });
      }
    });
    $.ajax({
      url: "/pallets.json",
      dataType: 'json',
      async: false,
      success: function(data){
          $.each(data,function(index, value){
            if(value.receipt_id == receipt_id)
            {
            	var id = id_count;
            	id_count++;
            	var new_register = new register(value.variety_id, value.quality_id, value.price_per_unit, value.pack_type_id, value.quantity, value.gross_weight, value.code, value.tare, true, id, 0, value.id);
            	registers[id_count] = new_register;

            	var pack_type_tare = get_pack_type_tare(value.pack_type_id);
            	var net_weight = value.gross_weight - (pack_type_tare * value.quantity) - value.tare;

            	var variety_name = get_variety_name(value.variety_id);
            	var quality_name = get_quality_name(value.quality_id);

            	var row = new Array(value.code, value.quantity, net_weight, variety_name, quality_name, value.price_per_unit, "<a class='del' name="+id_count+">Eliminar</a> <a class='edit' name="+id_count+">Editar</a>");
            	$('#tablealone').dataTable().fnAddData(row);
            }
          });
      }
    });
  }
</script>

