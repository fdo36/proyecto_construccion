
<div id="loginBox" class="loginClass">
	<h1><%= t('.sign_in', :default => "Sign in") %></h1>
	<p><%= alert %></p>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  		<div><%= f.label "Correo electrónico" %><br />
  		<%= f.email_field :email, :placeholder => "Correo electrónico" %></div>

  		<div><%= f.label "Contraseña" %><br />
  		<%= f.password_field :password, :placeholder => "Contraseña" %></div>

  		<% if devise_mapping.rememberable? -%>
    		<div><%= f.check_box :remember_me %> <%= f.label "Recordar sesión" %></div>
  		<% end -%>

  		<div><%= f.submit t('.sign_in', :default => "Sign in") %></div>
  		<%= render "devise/shared/links" %>
</div>
<% end %>
